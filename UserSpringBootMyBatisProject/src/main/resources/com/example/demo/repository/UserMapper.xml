<?xml version="1.0" encoding="UTF-8"?><!-- xmlのバージョンが1.0、エンコーディングがUTF-8であることを指定 -->
<!-- MyBatisが使用するDTDを指定 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- com.example.demo.repository.UserMapper という名前空間にマッピングする -->
<mapper namespace="com.example.demo.repository.UserMapper">

<!-- ユーザー情報テーブル内のすべてのレコードを検索するためのSELECT文 -->
	<select id="findAll" resultType="com.example.demo.entity.User">
		SELECT
			*
		FROM
			users
	</select>
<!-- ユーザー情報テーブル内の指定されたIDのレコードを検索するためのSELECT文 -->
	<select id="findById" resultType="com.example.demo.entity.User">
		SELECT
			*
		FROM
			users
        WHERE
			id = #{id}
	</select>
	
<!-- 新しいユーザー情報をユーザー情報テーブルに追加するためのINSERT文 -->
	<insert id="save">
    	INSERT INTO
        	users (name, age, gender)
    	VALUES
        	(#{name}, #{age}, #{gender})
	</insert>
	
<!-- ユーザー情報テーブル内の指定されたIDのレコードの年齢を更新するためのUPDATE文 -->
	<update id="update">
		UPDATE
			users
		SET
			age = #{age}
		WHERE
			id = #{id}
	</update>
	
<!-- ユーザー情報テーブル内の指定されたIDのレコードを削除するためのDELETE文 -->
	<delete id="delete">
		DELETE FROM
			users
		WHERE
			id = #{id}
	</delete>
</mapper>